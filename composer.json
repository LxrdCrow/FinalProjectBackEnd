{
    "name": "federico/app-final-project",
    "description": "",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0",  
        "firebase/php-jwt": "^6.10",  
        "vlucas/phpdotenv": "^5.6",  
        "ext-pdo": "*",  
        "ext-json": "*"  
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",  
        "squizlabs/php_codesniffer": "^3.7"  
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"  
        }
    },
    "scripts": {
        "test": "phpunit", 
        "fix": "phpcbf",  
        "lint": "phpcs"  
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",  
    "prefer-stable": true  
}

